{
  "$schema": "https://github.com/Azure/data-api-builder/releases/latest/download/dab.draft.schema.json",
  "data-source": {
    "database-type": "animationapp",
    "connection-string": "@env('COSMOS_CONNECTION')",
    "options": {
      "database": "animationapp",
      "schema": "staticwebapp.database.schema.gql"
    }
  },
  "runtime": {
    "rest": { "enabled": true, "path": "/rest" },
    "graphql": { "enabled": true, "path": "/graphql" }
  },
  "entities": {
    "Products": {
      "source": "Products",
      "permissions": [
        { "actions": ["create", "read", "update", "delete"], "role": "anonymous" }
      ]
    },
    "Orders": {
      "source": "Orders",
      "permissions": [
        { "actions": ["create", "read"], "role": "anonymous" }
      ]
    }
  }
}
